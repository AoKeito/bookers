
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>
  
  <h5>body</h5>
  <%= f.text_area :body %>
  
  </br><%= f.submit 'Update Book' %>

<% end %> 

<% if @book.errors.any? %>
    <b class = "error"><%= @book.errors.count %>errors prohibited this book from being saved:</b>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class = "item">
<%= link_to "Show", book_path(@book.id) %>
<p>|</p>
<%= link_to "Back", books_path %>
</div>
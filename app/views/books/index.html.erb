<h1>Books</h1>

<% @books.each do |book| %>

  <h6>Title</h6>
  <span><%= book.title %></span>
  
  <h6>Body</h6>
  <span><%= book.body %></span>
  
<%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  
<% end %>


<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %>
